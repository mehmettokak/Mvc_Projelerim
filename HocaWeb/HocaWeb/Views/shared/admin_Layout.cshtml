                            <li><a href="#">Link in level 1</a></li>
                            <li><a href="#">Link in level 2</a></li>
                            <li><a href="#">Link in level 3</a></li>
                        </ul>*@
                    </li>
                    <li class="treeview">
                        <a href="/Admin/Product"><i class="fa fa-link"></i> <span>Product</span> <i class="fa fa-angle-left pull-right"></i></a>
                        @*<ul class="treeview-menu">
                <li><a href="#">Link in level 1</a></li>
                <li><a href="#">Link in level 2</a></li>
                <li><a href="#">Link in level 3</a></li>
