                    <li class="active"><a href="/ContactUpdate"><i class="fa fa-link"></i> <span>Contact</span></a></li>
                </ul><!-- /.sidebar-menu -->
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                   Welcome To Page From Admin Panel 
                    <small>Ali Ismet Kanli</small><br /><br /><small>@Html.Raw(ViewBag.Error)</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="/Admin/Logout"><i class="fa fa-dashboard"></i> Level</a></li>
                    <li class="active">Here</li>
                </ol>
            </section>
            <!-- Main content -->
            <section class="content">
              @RenderBody()
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="pull-right hidden-xs">
                Anything you want
            </div>
            <!-- Default to the left -->
            <strong>Copyright &copy; 2015 <a href="#">Company</a>.</strong> All rights reserved.
        </footer>
    

       
    </div>
    <script src="/css1/jQuery/jQuery-2.1.4.min.js"></script>
    <script src="/css1/bootstrap/js/bootstrap.min.js"></script>
    <script src="/css1/dist/js/app.min.js"></script>
    <script>
    $(document).ready(
            function () {
                setInterval(function () {
                    $.ajax({
                        url: '/Admin/toplammail',
                        contentType: 'application/html; charset=utf-8',
                        type: 'GET',
                        dataType: 'html'
                    })
                    .success(function (result) {
                        $('.navbar-custom-menu').html(result);
                    })
                }, 10000);
            });
    </script>
    
</body>
</html>

