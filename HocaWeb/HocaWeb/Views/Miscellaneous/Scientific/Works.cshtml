@model HocaWeb.Models.Genel
@{
    ViewBag.Title = "Scientific Works";
    Layout = "~/Views/shared/_Layout.cshtml";
    bool sonuc = !Request.Url.ToString().Contains("#");
    //int i = 0;
    int j = 0;
}

<section id="content">
    <div class="page3-row1 pad-2 tabs">


        <div class="col-8">
            <h2 class="h2 p2">Fellowships</h2>
            <ul class="list-1 nav">
                @foreach (var item in Model.Kategori_Listeleri)
                {
                    j++;
                    <li id="txtbreak" @(j==1&&sonuc?"class=selected":"")><a href="#tab-@item.Kategori_ID" >@item.Kategori_AD</a></li>
                }


            </ul>
        </div>
        <h3 class="h3-2">Kategori</h3>
        @foreach (var item in Model.Kategori_Listeleri)
        {
            //i++;

            <div class="col-17">
                <div id="tab-@item.Kategori_ID" class="tab-content gallery-photo" @*@(i == 1 && sonuc ? "style='display:block;'" : "")*@>
                <div class="inner">
                <ul>

                @foreach (var item1 in Model.urun_listeleri.Where(x => x.Urun_Kategori_Id == item.Kategori_ID))
                {


                                <li class="comment"><p> @item1.UrunAdi</p></li>

                }

                </ul>
                </div>
                </div>

            </div>
        }



    </div>

</section>

