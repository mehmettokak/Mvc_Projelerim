@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/shared/admin_Layout.cshtml";

}
@model HocaWeb.Models.Sabitler
@{
    List<HocaWeb.Models.Sabit> Sabitolanlar = null;
    if (Model == null)
    {
        var d = new HocaWeb.Models.Sabitler();
        Sabitolanlar = d.SABITLER;
    }
    else
    {
        Sabitolanlar = Model.SABITLER;
    }

}
<h2>Update Contact </h2>

<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">Add Sub-Categories </h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form class="form-horizontal" action="/HomeUpdate" method="post">
        <div class="box-body">
            @*<input type="text"   name="id" style="display:none;"  />*@
            <div class="form-group">

                <div class="col-sm-10">



                    @foreach (var item in Sabitolanlar)
                    {


                        <label>Text-1</label>    <input type="text" class="form-control" name="text_1" value="@item.Text_7">
                        <label>Text-2</label>    <input type="text" class="form-control" name="text_2" value="@item.Text_8">
                        <label>Text-3</label>    <input type="text" class="form-control" name="text_3" value="@item.Text_9">
                        <label>Text-4</label>    <input type="text" class="form-control" name="text_4" value="@item.Text_10">
                        <label>Text-5</label>    <input type="text" class="form-control" name="text_5" value="@item.Text_11">
                        <label>Text-6</label>    <input type="text" class="form-control" name="text_6" value="@item.Text_12"><br /><br />
                        <label>Text-7</label>    <input type="text" class="form-control" name="text_7" value="@item.Text_13">
                        <label>Text-8</label>    <input type="text" class="form-control" name="text_8" value="@item.Text_14"><br /><br />
                        <label>Text-9</label>    <input type="text" class="form-control" name="text_9" value="@item.Text_15">
                        <input type="text" name="sabit_id" value="@item.Text_id" style="display:none;" />
                         <input type="text" name="Gelen" value="Contact" style="display:none;" />
                    }




                </div>
            </div>


        </div><!-- /.box-body -->
        <div class="box-footer">

            <button type="submit" class="btn btn-info pull-right">Update</button>
        </div><!-- /.box-footer -->

    </form>
</div>