@model IEnumerable<HaberWeb.Models.Haber>

@{
    Layout = null;
}


   
    <table class="table"  border="1">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.H_Baslik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.H_YayimTarihi)
            </th>
            <th>
              
                Yazar
            </th>
            <th>
                Kategori
            </th>
            <th>
                Haber Tip
            </th>
            <th>
              Resim
            </th>
            <th>
               G.S.
            </th>
         
           
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.H_Baslik)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.H_YayimTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.aspnet_Users.H_Yazar.H_Y_Adi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.H_Kategori.H_K_Adi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.H_Tip.H_T_Adi)
            </td>
            <td>
            <img src="@item.H_KucukResimYol" width="50" height="50"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.H_Goruntuleme)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "HaberDuzenle", new {id=item.H_id }) |
                @Html.ActionLink("Sil", "HaberSil", new { id=item.H_id }) |
            </td>
        </tr>
    }
    
    </table>
